// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  password String

  @@map("users")
}

model RandomUser {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  picture  String
  name     String
  username String
  email    String
  age      Int

  @@map("randomUsers")
}

model Customer {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  email   String  @unique
  cpf     String  @unique
  phone   String
  address Address

  @@map("customers")
}

type Address {
  cep      String
  state    String
  city     String
  district String
  street   String
  number   String
}
